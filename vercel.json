{
  "crons": [
    {
      "path": "/api/cron/process-jobs",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "app/api/assistant/route.ts": {
      "maxDuration": 60
    },
    "app/api/assistant/status/route.ts": {
      "maxDuration": 60
    },
    "app/api/chat/route.ts": {
      "maxDuration": 60
    }
  },
  "buildCommand": "npm ci --legacy-peer-deps && npm install tailwindcss postcss autoprefixer --no-save && npm run build",
  "installCommand": "npm ci --legacy-peer-deps"
} 